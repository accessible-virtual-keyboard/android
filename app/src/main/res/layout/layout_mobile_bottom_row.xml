<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/mobileLayoutButtonGroupBackground"
        android:padding="@dimen/mobileLayoutButtonGroupPadding"
        android:weightSum="1">

        <TextView
            android:id="@+id/sym_dictionary"
            style="@style/DefaultTextViewLetterStyle" />

    </LinearLayout>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/mobileLayoutButtonGroupBackground"
        android:padding="@dimen/mobileLayoutButtonGroupPadding"
        android:weightSum="4">

        <TextView
            android:id="@+id/sym_period"
            style="@style/DefaultTextViewLetterStyle" />

        <TextView
            android:id="@+id/sym_comma"
            style="@style/DefaultTextViewLetterStyle" />

        <TextView
            android:id="@+id/sym_question_mark"
            style="@style/DefaultTextViewLetterStyle" />
        <TextView
            android:id="@+id/sym_exclamation_mark"
            style="@style/DefaultTextViewLetterStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/mobileLayoutButtonGroupBackground"
        android:padding="@dimen/mobileLayoutButtonGroupPadding"
        android:weightSum="1">

        <TextView
            android:id="@+id/sym_send"
            style="@style/DefaultTextViewLetterStyle" />

    </LinearLayout>

</merge>