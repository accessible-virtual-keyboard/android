<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:activity="no.ntnu.stud.avikeyb.MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/layoutTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp">
    </android.support.design.widget.TabLayout>

    <EditText
        android:inputType="none"
        android:imeOptions="actionNone"
        android:id="@+id/currentBuffer"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="2dp"
        android:paddingLeft="2dp"
        android:layout_below="@+id/layoutTabs"
        android:textSize="18sp"
        android:textCursorDrawable="@null"
        android:background="@color/background"/>
        <!-- TODO change BG color above? -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/currentBuffer"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/buttonInput1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutWrapper"
                android:text="Input1" />

            <Button
                android:id="@+id/buttonInput2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutWrapper"
                android:layout_toRightOf="@+id/buttonInput1"
                android:text="Input2" />

            <Button
                android:id="@+id/buttonInput3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutWrapper"
                android:layout_toRightOf="@+id/buttonInput2"
                android:text="Input3" />

            <Button
                android:id="@+id/buttonInput4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutWrapper"
                android:layout_toRightOf="@+id/buttonInput3"
                android:text="Input4" />

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
